{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "bedwars:blue_fangyuta"
		},
		"components": {
			"minecraft:destroy_time": 2,
			"minecraft:on_player_placing":{
				"event" : "bedwars:set_fangyuta_mark_and_facing"
			}
		},
		"events": {
			"bedwars:set_fangyuta_mark_and_facing": {
				"sequence":[
					{
						"run_command": {
							"command":[
								"summon bedwars:fangyuta_mark ~ ~ ~"
							],
							"target": "block"
						}
					},
					{
						"run_command": {
							"command":[
							"tag @s add set_fangyuta_mark_facing",
							"execute @e[type=bedwars:fangyuta_mark] ~~~ tp @s ~~~ facing @a[tag=set_fangyuta_mark_facing]",
							"execute @e[type=bedwars:fangyuta_mark] ~~~ scoreboard players set @s fangyuta_team 2"
							],
							"target": "player"
						}
					}
				]
			}
		}
	}
}